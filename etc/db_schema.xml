<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="oneagrix_customblog_blog" resource="default" engine="innodb" comment="oneagrix_customblog_blog Table">
		<column xsi:type="smallint" name="blog_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="blog_id"/>
		</constraint>
		<column name="title" nullable="true" xsi:type="text" comment="Blog title"/>
		<column name="description" nullable="true" xsi:type="text" comment="description"/>
	</table>
</schema>
